<!DOCTYPE html>
<html>
<head>
  <title><%= user.firstName %>'s Travels</title>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css">
  <link href="https://fonts.googleapis.com/css?family=Lato|Raleway" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/styles/application.css">
</head>
<body>

  <div class='container'>
    <header class="dashboard-header">
      <img class='logo' src= '/img/traveler_logo_book.png'>
      <div class="title-wrap">
       <h1>MyTravels</h1>
       <h3>Track your rad travels.</h3>
      </div>
      <div class='login-info'>
        <p class='username'>
          <%= user.firstName + ' ' + user.lastName %><br>
          <a href="/logout">logout</a>
        </p>
        <img class='profile-pic' src='<%= user.profilePhoto %>'>
      </div>
    </header>

    <div id='map'></div>

    <div id='button-container'>
      <button id='display-switch'>Add City</button>
      <button id="display-stats">Check Stats</button>
    </div>

    <section class="stats-page"></section>

    <ul id='city-list'></ul>

    <form id='location-form' action='/users/<%= user._id %>/location' method='post'>
      <h3>Add a Location</h3>
      <div class='form-container'>
        <div>
          <label>City</label>
          <input name='city' id='city'>
        </div>
        <div>
          <label>Country</label>
          <input name='country' id='country'>
        </div>
          <input type='hidden' name='long' id='long'>
          <input type='hidden' name='lat' id='lat'>
        <div>
          <input id='form-userid' type='hidden' name='userid' value='<%= user._id %>'>
        <button type='submit'>Submit</button>
      </div>
    </form>

  </div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/main.js" type="text/javascript"></script>
<script src="/js/login.js" type="text/javascript"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBV06Rqe2o_LP8qqrSeusRqs2VSNxAFMrU"></script>
</body>
</html>
